<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 四个切换按钮的样式 -->
    <style name="botttom_tag_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/rb_native_textcolor_selector</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 网络视频界面顶部的分类按钮的样式 -->
                <!-- android:duplicateParentState="true" -->
    <style name="nettv_top_type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/netpagetop_type_textcolor_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginEnd">18sp</item>
        <item name="android:clickable">true</item>
        
    </style>

</resources>
