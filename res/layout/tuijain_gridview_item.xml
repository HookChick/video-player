<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dip"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/recommend_tu_layout"
        android:layout_height="120dip"
        android:layout_width="170dip"
        android:layout_alignParentTop="true">
	    <ImageView   
	        android:id="@+id/imageView_item" 
	        android:layout_centerInParent="true"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:contentDescription="推荐视频的图片部分"
		    android:background="@drawable/bg_player_loading_background" />
	    <TextView 
	        android:id="@+id/recommend_vodeo_duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginStart="10dp"
	        android:layout_marginBottom="5dp"
	        android:text="00:00:00"
	        android:textColor="#FFFFFF"/>
    </RelativeLayout>
	<TextView 
	    android:id="@+id/recommend_netvideo_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="名字"
	    android:layout_below="@id/recommend_tu_layout"
	    android:layout_marginStart="5dp"
	    android:maxLines="1"
	    android:textSize="14sp"
	    android:layout_marginTop="3dp"
	    />
	
	<TextView 
	    android:id="@+id/netvide_rating"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="评分:"
	    android:layout_below="@id/recommend_netvideo_name"
	    android:layout_marginStart="10dp"
	    />
	<TextView 
	    android:id="@+id/recommend_netvide_rating"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="8.4"
	    android:layout_toEndOf="@id/netvide_rating"
	    android:layout_below="@id/recommend_netvideo_name"
	    android:layout_marginStart="2dp"
	    />
</RelativeLayout>
